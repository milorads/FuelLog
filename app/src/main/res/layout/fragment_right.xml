<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.infiniteimmagionation.fuellog.RightActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/plus"
            android:id="@+id/imageView3"
            android:layout_weight="14723.72" />

        <TextView
            android:text="@string/EnterInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="0.63"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorAccentDark"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.63" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="313dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Current mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/mileageText"
                    android:text="0" />

                <TextView
                    android:text="km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Current fuel added"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/fuelText"
                    android:text="0" />

                <TextView
                    android:text="l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Price"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <Spinner
                    android:layout_width="139dp"
                    android:layout_height="match_parent"
                    android:id="@+id/perLiterTotal"
                    android:entries="@array/perLiter_or_Total"
                    />

                <EditText
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/priceText"
                    android:text="0" />

                <TextView
                    android:text="din"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_horizontal_margin" />

            <Button
                android:text="Save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saveAddButton"
                android:backgroundTint="@color/colorAccentLight"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
